<form {{on "submit" (fn @submitAction @paymentMethod)}}>
    <div class="row">
        <div class="col-md-6">
            <Metronic::Inputs::MText
                @label={{t "payment_method.attr.code"}}
                @value={{@paymentMethod.code}}
                />
        </div>
        <div class="col-md-6">
            <Metronic::Inputs::MText
                @label={{t "payment_method.attr.name"}}
                @value={{@paymentMethod.name}}
            />
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-lg-12">
            <Metronic::MButton @type="submit">
                {{#if @paymentMethod.isNew}}
                    {{t "button.add"}}
                {{else}}
                    {{t "button.update"}}
                {{/if}}
            </Metronic::MButton>
        </div>
    </div>
</form>

