<div class="row">
    <div class="col">
        <Metronic::Inputs::MSelect
            @useInputWrapper=false
            @searchField="displayName"
            @selected={{@pso.product}}
            @onchange={{action setProduct}}
            @renderInPlace=true
            @label={{t "product_sales_order.rel.product"}}
            @options={{this.productOptions}} as |option|>

            {{option.displayName}}
        </Metronic::Inputs::MSelect>
    </div>

    <div class="col">
        <Metronic::Inputs::MSelect
            @useInputWrapper=false
            @searchField="name"
            @selected={{@pso.stockDivision}}
            @onchange={{action (mut @pso.stockDivision)}}
            @renderInPlace=true
            @label={{t "product_sales_order.rel.stockDivision"}}
            @options={{this.stockDivisionOptions}} as |option|>
            {{option.name}}
        </Metronic::Inputs::MSelect>
    </div>

    <div class="col">
        <Metronic::Inputs::MText
            @value={{@pso.product.stock}}
            @disabled=true
            @label="Stok Sementara"
            @useInputWrapper=false
        />
    </div>

    <div class="col">
        <Metronic::Inputs::MText
            @value={{@pso.orderQuantity}}
            @label={{t "product_sales_order.attr.order_quantity"}}
            @useInputWrapper=false
        />
    </div>
</div>

<div class="row">
    {{#unless (or @salesOrder.isNew (eq @salesOrder.status 1))}}
        <div class="col">
            <Metronic::Inputs::MText
                @value={{@pso.amountApproved}}
                @label={{t "product_sales_order.attr.amount_approved"}}
                @useInputWrapper=false
            />
        </div>

        <div class="col">
            <Metronic::Inputs::MText
                @value={{@pso.amountRejected}}
                @label={{t "product_sales_order.attr.amount_rejected"}}
                @useInputWrapper=false
            />
        </div>
    {{/unless}}

    <div class="col">
        <Metronic::Inputs::MText
            @value={{@pso.sellPrice}}
            @label={{t "product_sales_order.attr.sell_price"}}
            @useInputWrapper=false
         />
    </div>

    <div class="col">
        <Metronic::Inputs::MText
            @value={{@pso.discount}}
            @label={{t "product_sales_order.attr.discount"}}
            @useInputWrapper=false
        />
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-12">
        <Metronic::MButton
            @label={{t "save"}}
            @type="button"
            @action={{@save}}
        />
    </div>
</div>
