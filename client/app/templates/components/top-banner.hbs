<div id="xxxroomBannerFade" class="carousel slide carousel-fade" data-ride="carousel">
	<ol class="carousel-indicators">
		<li data-target="#xxxroomBannerFade" data-slide-to="0" class="active"></li>
	</ol>

	<div class="carousel-inner">

        <div class="carousel-item active" data-interval="1000">

			{{#if firstBanner.product}}
				{{#link-to (r 'products.show') firstBanner.product.id}}
					<img src={{firstBanner.imageUrl}} class="d-block w-100" alt="slide-image">
				{{/link-to}}
			{{else}}
				<img src={{firstBanner.imageUrl}} class="d-block w-100" alt="slide-image">
			{{/if}}

        </div>

        {{#each remainingBanners as |banner|}}
            <div class="carousel-item" data-interval="1000">
				{{#if banner.product}}
					{{#link-to (r 'products.show') banner.product.id}}
						<img src={{banner.imageUrl}} class="d-block w-100" alt="slide-image">
					{{/link-to}}
				{{else}}
					<img src={{banner.imageUrl}} class="d-block w-100" alt="slide-image">
				{{/if}}
            </div>
        {{/each}}
	</div>
	<a class="carousel-control-prev" href="#xxxroomBannerFade" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#xxxroomBannerFade" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

{{yield}}
