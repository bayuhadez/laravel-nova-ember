<div class="form-group">
    <label for="select-input">{{label}}{{if isRequired ' *' ''}}</label>
    <div class="row">

        <div class="col-6">
            {{#power-select
                disabled=disabled
                searchField="name"
                placeholder="Pilih Negara"
                selected=phone.country
                options=countries
                renderInPlace=true
                onchange=(action (mut phone.country))
                triggerClass=countryClasses
                as |country|
            }}
                {{country.name}}
            {{/power-select}}

            {{#if showErrors}}
                {{#if (v-get phone 'country' 'isInvalid')}}
                    <div class="kt-font-danger">
                        {{v-get phone 'country' 'messages'}}
                    </div>
                {{/if}}
            {{/if}}
        </div>

        <div class="col-6">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">{{selectedPhonecode}}</div>
                </div>
                {{input
                    type="text"
                    class=numberClasses
                    value=phone.number
                }}
            </div>

            {{#if showErrors}}
                {{#if (v-get phone 'number' 'isInvalid')}}
                    <div class="kt-font-danger">
                        {{v-get phone 'number' 'messages'}}
                    </div>
                {{/if}}
            {{/if}}
        </div>
    </div>

</div>
{{yield}}
