{{metronic/sub-header title=pageTitle}}

{{#metronic/m-container}}
    {{#if (has-block)}}
        {{yield}}
    {{/if}}

    {{!-- list table --}}
    {{#metronic/m-portlet as |portlet|}}

        {{#portlet.head}}
            {{metronic/m-button
                action=(action "addRecord")
                label=(t "create")
            }}
        {{/portlet.head}}

        {{#portlet.body}}
            {{component datatableComponent
                onEdit=(action "editRecord")
                onDelete=(action "deleteRecord")}}
        {{/portlet.body}}

    {{/metronic/m-portlet}}

    {{outlet}}

{{/metronic/m-container}}
