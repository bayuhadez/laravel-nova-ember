<button class="btn btn-brand btn-pill ml-3" id="quick-add-button" onclick={{action "showMenu"}}>
    <i class="{{icon}} kt-menu__link-icon"></i>
    <span class="kt-menu__link-text">{{label}}</span>
</button>


{{#metronic/m-modal
    class="quick-add-modal"
    id="quick-add-menu"
    as |modal|}}
    {{#modal.body}}
        <div class="row">
            {{#each navs as |nav|}}
                <div class="col-md-6">
                    <h4 class="kt-font-transform-u mb-3">{{nav.label}}</h4>
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                {{#each nav.subs as |submenu|}}
                                    <div class="col-12 mb-3">
                                        <span>
                                            <a href="javascript:void(0)" {{action 'goToSubRoute' submenu}}>
                                                {{submenu.label}}
                                            </a>
                                        </span>
                                    </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/modal.body}}
{{/metronic/m-modal}}