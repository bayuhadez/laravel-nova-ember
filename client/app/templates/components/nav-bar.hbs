<header class="navbar navbar-expand-lg sticky-top navbar-light bg-white mb-0 pt-0 pr-3">

	{{#link-to (r "dashboard") class="navbar-brand ml-lg-5"}}
		<img src="/assets/img/logo-header.jpg" alt={{t "brand.name"}}>
	{{/link-to}}

	<button
		class="navbar-toggler"
		type="button"
		data-toggle="collapse"
		data-target="#navbarSupportedContent"
		aria-controls="navbarSupportedContent"
		aria-expanded="false"
		aria-label={{t "toggle navigation"}}>

		<span class="sr-only">{{t "toggle navigation"}}</span>
		<span class="navbar-toggler-icon"></span>
		<span class="navbar-toggler-icon"></span>
		<span class="navbar-toggler-icon"></span>

	</button>

	<div class="collapse navbar-collapse" id="navbarSupportedContent">

		<ul class="navbar-nav ml-auto">
			{{#each navs as |nav|}}
				<li class="nav-item">
					{{#link-to nav.route class="nav-link"}}
						{{t nav.label}}
					{{/link-to}}
				</li>
			{{/each}}

			{{auth-bar}}

		</ul>

	</div>

</header>
{{yield}}
